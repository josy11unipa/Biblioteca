<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user.ModPsw_Fragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/generic_user"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/campoVecchiaPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FBE236"
        android:hint="Vecchia Password"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#9C9C9C"
        android:typeface="monospace"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/campoNuovaPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FBE236"
        android:hint="Nuova password"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#9C9C9C"
        android:typeface="monospace"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/campoNuovaPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FBE236"
        android:hint="Conferma Password"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#9C9C9C"
        android:typeface="monospace"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button_confermaNuovaPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:padding="12dp"
        android:text="Conferma"
        android:typeface="monospace" />

</LinearLayout>
